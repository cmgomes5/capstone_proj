# Brewfile for Virtual DM Project
# Install with: brew bundle

# Node.js runtime and npm package manager
brew "node"

# Task runner for Taskfile.yml automation
brew "go-task"

# Docker for containerization
cask "docker"

# Kubernetes tools
brew "kubectl"

# k3d for local Kubernetes clusters
brew "k3d"

# Tilt for Kubernetes development workflow
brew "tilt"
